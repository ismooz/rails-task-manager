<div class="container">
  <%= link_to edit_task_path(@task.id), class: "float-right btn btn-light" do %>
  <i class="fa fa-pencil"></i> Edit this task
  <% end %>

  <h2><%= @task.title %></h2>

  <p class="task-detail"><%= @task.details %></p>

  <% if @task.completed %>
  <i class="fa fa-check-square-o"></i> - This task is completed
  <% else %>
  <i class="fa fa-square-o"></i> - This task is not completed yet
  <% end %><br>

  <hr>
  <%= link_to '<i class="fas fa-history"></i> - Back to list'.html_safe, tasks_path %>
</div>
